<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Путь к папке Downloads -->
    <external-path
        name="downloads"
        path="Download/" />

    <!-- Путь к папке RuStore внутри Downloads -->
    <external-path
        name="rustore_downloads"
        path="Download/RuStore/" />

    <!-- Корень внешнего хранилища -->
    <external-path
        name="external_storage_root"
        path="." />

    <!-- Внутренний кеш -->
    <cache-path
        name="cache"
        path="/" />

    <!-- Внутренние файлы приложения -->
    <files-path
        name="files"
        path="." />
</paths>